@using Microsoft.AspNetCore.Mvc.TagHelpers
@model RestaurantMenu.ViewModels.CreateUserViewModel
@{
    ViewData["Title"] = "Create New User";
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index">
                        <i class="bi bi-people-fill"></i> Users
                    </a>
                </li>
                <li class="breadcrumb-item active">Create New User</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow-lg">
            <div class="card-header">
                <h2 class="mb-0">
                    <i class="bi bi-person-plus-fill me-2"></i>Create New User
                </h2>
                <p class="mb-0 mt-2 text-white-50">Add a new restaurant owner to the system</p>
            </div>
            <div class="card-body p-4">
                <form asp-action="CreateUser" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="FullName" class="form-label">
                                <i class="bi bi-person-fill me-2"></i>Full Name
                            </label>
                            <input asp-for="FullName" class="form-control form-control-lg" 
                                   placeholder="John Doe" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope-fill me-2"></i>Email Address
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg" 
                                   placeholder="john@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="NIPT" class="form-label">
                                <i class="bi bi-card-text me-2"></i>NIPT
                            </label>
                            <input asp-for="NIPT" class="form-control form-control-lg" 
                                   placeholder="K12345678L" />
                            <span asp-validation-for="NIPT" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <label asp-for="NumberOfBranches" class="form-label">
                                <i class="bi bi-shop-window me-2"></i>Number of Branches
                            </label>
                            <input asp-for="NumberOfBranches" class="form-control form-control-lg" 
                                   type="number" min="1" max="100" value="1" />
                            <span asp-validation-for="NumberOfBranches" class="text-danger"></span>
                            <small class="form-text text-muted">Maximum branches this user can create</small>
                        </div>
                    </div>
                    
                    <div class="alert alert-info d-flex align-items-center mb-4" role="alert">
                        <i class="bi bi-info-circle-fill fs-4 me-3"></i>
                        <div>
                            <strong>Note:</strong> A random password will be generated and displayed after creation. 
                            The user will be prompted to change it on first login.
                        </div>
                    </div>
                    
                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-primary btn-lg flex-fill">
                            <i class="bi bi-check-circle-fill me-2"></i>Create User
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-x-circle me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
