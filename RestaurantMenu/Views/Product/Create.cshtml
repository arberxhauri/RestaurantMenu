                                    }
                                }


                            </div>
                        </div>
                        
                        <!-- Right Column - Image Upload -->
                        <div class="col-lg-5">
                            <div class="mb-4">
                                <label class="form-label">
                                    <i class="bi bi-image-fill me-2"></i>Product Image
                                </label>
                                <div class="image-upload-wrapper">
                                    <div id="imagePreview" class="image-preview-box" 
                                         onclick="document.getElementById('image').click()">
                                        <div class="upload-placeholder">
                                            <i class="bi bi-cloud-upload display-1 text-muted mb-3"></i>
                                            <h5 class="text-muted">Drag & Drop</h5>
                                            <p class="text-muted mb-3">or click to browse</p>
                                            <small class="text-muted">JPG, PNG, GIF (Max: 5MB)</small>
                                        </div>
                                    </div>
                                    <input type="file" name="image" id="image" class="d-none" 
                                           accept="image/*" onchange="handleImageSelect(event)" />
                                </div>
                            </div>

                            <div class="card glass-card border-0 p-3">
                                <h6 class="fw-bold mb-3">
                                    <i class="bi bi-lightbulb-fill text-warning me-2"></i>Tips
                                </h6>
                                <ul class="small text-muted mb-0 ps-3">
                                    <li>Use high-quality images (at least 800x800px)</li>
                                    <li>Show the product clearly with good lighting</li>
                                    <li>Avoid text overlays on images</li>
                                    <li>Use consistent image styles across products</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-success btn-lg flex-fill">
                            <i class="bi bi-check-circle-fill me-2"></i>Create Product
                        </button>
                        <a asp-controller="Branch" asp-action="Details" asp-route-id="@ViewBag.BranchId" 
                           class="btn btn-secondary btn-lg">
                            <i class="bi bi-x-circle me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .image-upload-wrapper {
            position: relative;
        }
        
        .image-preview-box {
            width: 100%;
            height: 350px;
            border: 3px dashed rgba(102, 126, 234, 0.3);
            border-radius: 20px;
            background: var(--glass-bg);
            backdrop-filter: blur(10px);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            background-size: cover;
            background-position: center;
            position: relative;
            overflow: hidden;
        }
        
        .image-preview-box:hover {
            border-color: #667eea;
            transform: scale(1.02);
            box-shadow: 0 10px 40px rgba(102, 126, 234, 0.2);
        }
        
        .image-preview-box.has-image {
            border-style: solid;
            border-color: #0ba360;
        }
        
        .upload-placeholder {
            text-align: center;
            padding: 2rem;
            transition: opacity 0.3s ease;
        }
        
        .image-preview-box.has-image .upload-placeholder {
            opacity: 0;
            pointer-events: none;
        }
        
        .image-remove-btn {
            position: absolute;
            top: 15px;
            right: 15px;
            background: rgba(220, 53, 69, 0.9);
            color: white;
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: none;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 10;
        }
        
        .image-preview-box.has-image .image-remove-btn {
            display: flex;
        }
        
        .image-remove-btn:hover {
            background: #dc3545;
            transform: scale(1.1);
        }
    </style>
    <script>
        const imagePreview = document.getElementById('imagePreview');
        const imageInput = document.getElementById('image');
        
        // Handle image selection
        function handleImageSelect(event) {
            const file = event.target.files[0];
            if (file) {
                previewImage(file);
            }
        }
        
        // Preview image
        function previewImage(file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                imagePreview.style.backgroundImage = `url('${e.target.result}')`;
                imagePreview.classList.add('has-image');
                
                // Add remove button if not exists
                if (!document.querySelector('.image-remove-btn')) {
                    const removeBtn = document.createElement('button');
                    removeBtn.className = 'image-remove-btn';
                    removeBtn.type = 'button';
                    removeBtn.innerHTML = '<i class="bi bi-x-lg"></i>';
                    removeBtn.onclick = removeImage;
                    imagePreview.appendChild(removeBtn);
                }
            };
            reader.readAsDataURL(file);
        }
        
        // Remove image
        function removeImage(e) {
            e.stopPropagation();
            imagePreview.style.backgroundImage = '';
            imagePreview.classList.remove('has-image');
            imageInput.value = '';
            const removeBtn = document.querySelector('.image-remove-btn');
            if (removeBtn) removeBtn.remove();
        }
        
        // Drag and drop functionality
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            imagePreview.addEventListener(eventName, preventDefaults, false);
        });
        
        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }
        
        ['dragenter', 'dragover'].forEach(eventName => {
            imagePreview.addEventListener(eventName, () => {
                imagePreview.style.borderColor = '#667eea';
                imagePreview.style.transform = 'scale(1.02)';
            });
        });
        
        ['dragleave', 'drop'].forEach(eventName => {
            imagePreview.addEventListener(eventName, () => {
                imagePreview.style.borderColor = '';
                imagePreview.style.transform = '';
            });
        });
        
        imagePreview.addEventListener('drop', handleDrop);
        
        function handleDrop(e) {
            const dt = e.dataTransfer;
            const file = dt.files[0];
            
            if (file && file.type.startsWith('image/')) {
                imageInput.files = dt.files;
                previewImage(file);
            }
        }
    </script>
}
