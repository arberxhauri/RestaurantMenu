                <i class="bi bi-telephone-fill"></i>
                <span>@Model.PhoneNumber</span>
            </div>
        </div>
    </div>
</div>

<!-- Menu Content -->
<div class="menu-container">
    <!-- Category Navigation Navbar -->
    @if (Model.Categories.Any(c => c.Products.Any()))
    {
        <nav class="category-navbar">
            <button class="nav-scroll-btn" id="scrollLeft" disabled>
                <i class="bi bi-chevron-left"></i>
            </button>

            <div class="nav-container-wrapper" id="navWrapper">
                <div class="nav-container" id="navContainer">
                    <a href="#header" class="nav-link active">
                        <i class="bi bi-house-door"></i>
                        <span>All</span>
                    </a>
                    @foreach (var category in Model.Categories.Where(c => c.Products.Any()).OrderBy(c => c.Priority))
                    {
                        var categorySlug = category.Name.Replace(" ", "-").ToLower();
                        var categoryName = TranslationHelper.GetTranslation(category.Name, category.NameTranslations, currentLang);
                        <a href="#@categorySlug" class="nav-link" data-category="@categorySlug">
                            @categoryName <span style="opacity: 0.7;">(@category.Products.Count)</span>
                        </a>
                    }
                </div>
            </div>

            <button class="nav-scroll-btn" id="scrollRight">
                <i class="bi bi-chevron-right"></i>
            </button>
        </nav>
    }

    @if (!Model.Categories.Any(c => c.Products.Any()))
    {
        <div class="category-section">
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="bi bi-inbox"></i>
                </div>
                <h3>Menu Coming Soon</h3>
                <p>We're working on adding delicious items to our menu.</p>
            </div>
        </div>
    }
    else
    {
        @foreach (var category in Model.Categories.Where(c => c.Products.Any()).OrderBy(c => c.Priority))
        {
            var categorySlug = category.Name.Replace(" ", "-").ToLower();
            var categoryName = TranslationHelper.GetTranslation(category.Name, category.NameTranslations, currentLang);

            <div id="@categorySlug" class="category-section">
                <div class="category-header">
                    <h2 class="category-title">@categoryName</h2>
                    <p class="category-count">@category.Products.Count @(category.Products.Count == 1 ? "item" : "items")</p>
                </div>

                <div class="products-list">
                    @foreach (var product in category.Products.OrderBy(p => p.DisplayOrder))
                    {
                        var productName = TranslationHelper.GetTranslation(product.Name, product.NameTranslations, currentLang);
                        var productDesc = TranslationHelper.GetTranslation(product.Description ?? "", product.DescriptionTranslations, currentLang);
                        var productNutrition = TranslationHelper.GetTranslation(product.Nutritions ?? "", product.NutritionsTranslations, currentLang);

                        <div class="product-card @(string.IsNullOrEmpty(product.Image) ? "no-image" : "")">
                            @if (!string.IsNullOrEmpty(product.Image))
                            {
                                <div class="product-image-wrapper">
                                    <img src="@product.Image" alt="@productName" class="product-image"/>
                                </div>
                            }

                            <div class="product-details">
                                <div class="product-header">
                                    <div style="flex: 1;"> <!-- Added flex: 1 to push price/heart to right -->
                                        <h3 class="product-name">@productName</h3>
                                        @if (!string.IsNullOrEmpty(productDesc))
                                        {
                                            <p class="product-description">@productDesc</p>
                                        }
                                        @if (!string.IsNullOrEmpty(productNutrition))
                                        {
                                            <div class="product-nutrition">
                                                <i class="bi bi-heart-pulse-fill"></i>
                                                <span>@productNutrition</span>
                                            </div>
                                        }
                                    </div>

                                    <!-- Price and Heart Container -->
                                    <div class="d-flex align-items-center">
                                        <div class="product-price">
                                            @ViewBag.CurrencySymbol@product.Price.ToString("N2")
                                        </div>

                                        <!-- NEW: Heart Button -->
                                        <button class="btn-heart"
                                                onclick="toggleFavorite(this, '@product.Id', '@JavaScriptEncoder.Default.Encode(productName)', @product.Price)"
                                                aria-label="Save to list">
                                            <i class="bi bi-heart"></i>
                                        </button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>

<!-- Footer -->
<div class="menu-footer">
    <p>
        <i class="bi bi-shop-window me-2"></i>
        Powered by My Quick Menu
    </p>
    <small>&copy; @DateTime.Now.Year @Model.Name. All rights reserved.</small>
</div>

<!-- JavaScript -->
<script>
        // Hide loader when page is fully loaded
        window.addEventListener('load', function() {
            const loader = document.getElementById('pageLoader');
            if (loader) {
                loader.style.opacity = '0';
                loader.style.transition = 'opacity 0.3s';
                setTimeout(() => loader.remove(), 300);
            }
        });

        // Language dropdown toggle
        function toggleLanguageDropdown() {
            const dropdown = document.getElementById('languageDropdown');
            dropdown.classList.toggle('show');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.getElementById('languageDropdown');
            const langBtn = document.querySelector('.language-btn');

            if (dropdown && langBtn && !langBtn.contains(event.target) && !dropdown.contains(event.target)) {
                dropdown.classList.remove('show');
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            const navLinks = document.querySelectorAll('.nav-link');
            const sections = document.querySelectorAll('.category-section');
            const navContainer = document.getElementById('navContainer');
            const navWrapper = document.getElementById('navWrapper');
            const scrollLeftBtn = document.getElementById('scrollLeft');
            const scrollRightBtn = document.getElementById('scrollRight');

            // Scroll buttons functionality
            if (scrollLeftBtn && scrollRightBtn && navContainer) {
                scrollLeftBtn.addEventListener('click', function() {
                    navContainer.scrollBy({ left: -200, behavior: 'smooth' });
                });

                scrollRightBtn.addEventListener('click', function() {
                    navContainer.scrollBy({ left: 200, behavior: 'smooth' });
                });

                // Update button states and fade indicators
                function updateScrollButtons() {
                    const scrollLeft = navContainer.scrollLeft;
                    const scrollWidth = navContainer.scrollWidth;
                    const clientWidth = navContainer.clientWidth;
                    const maxScroll = scrollWidth - clientWidth;

                    // Update buttons
                    scrollLeftBtn.disabled = scrollLeft <= 0;
                    scrollRightBtn.disabled = scrollLeft >= maxScroll - 1;

                    // Update fade indicators
                    if (scrollLeft > 0) {
                        navWrapper.classList.add('show-left-fade');
                    } else {
                        navWrapper.classList.remove('show-left-fade');
                    }

                    if (scrollLeft < maxScroll - 1) {
                        navWrapper.classList.add('show-right-fade');
                    } else {
                        navWrapper.classList.remove('show-right-fade');
                    }
                }

                navContainer.addEventListener('scroll', updateScrollButtons);
                window.addEventListener('resize', updateScrollButtons);
                updateScrollButtons(); // Initial check
            }

            // Smooth scroll to sections
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href').substring(1);
                    const targetElement = document.getElementById(targetId);

                    if (targetElement) {
                        targetElement.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });

                        // Update active state
                        updateActiveNav(this);

                        // Scroll active link into view
                        this.scrollIntoView({
                            behavior: 'smooth',
                            block: 'nearest',
                            inline: 'center'
                        });
                    }
                });
            });

            // Update active nav on scroll
            window.addEventListener('scroll', function() {
                let current = '';

                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    if (window.scrollY >= (sectionTop - 200)) {
                        current = section.getAttribute('id');
                    }
                });

                navLinks.forEach(link => {
                    link.classList.remove('active');
                    const href = link.getAttribute('href').substring(1);

                    if (href === current) {
                        link.classList.add('active');

                        // Scroll active link into view in navbar
                        link.scrollIntoView({
                            behavior: 'smooth',
                            block: 'nearest',
                            inline: 'center'
                        });
                    }
                });

                // If at top, activate "All"
                if (window.scrollY < 300) {
                    navLinks.forEach(link => link.classList.remove('active'));
                    navLinks[0].classList.add('active');
                }
            });

            function updateActiveNav(activeLink) {
                navLinks.forEach(link => link.classList.remove('active'));
                activeLink.classList.add('active');
            }
        });

        // --- Favorites / Local Storage Logic ---

        // Unique key for this specific restaurant branch so data doesn't clash
        const STORAGE_KEY = 'menu_fav_' + '@Model.Name.Replace(" ", "_")';
        const CURRENCY_SYMBOL = '@Html.Raw(ViewBag.CurrencySymbol)';

        // State
        let favorites = [];

        // Initialize
        function initFavorites() {
            const stored = localStorage.getItem(STORAGE_KEY);
            if (stored) {
                try {
                    favorites = JSON.parse(stored);
                } catch (e) {
                    favorites = [];
                }
            }
            updateFavoritesUI();
        }

        // Toggle Item
        window.toggleFavorite = function(btn, id, name, price) {
            const index = favorites.findIndex(item => item.id === id);

            // Add animation effect
            btn.style.transform = 'scale(0.9)';
            setTimeout(() => btn.style.transform = 'scale(1)', 150);

            if (index === -1) {
                // Add
                favorites.push({ id, name, price });
                btn.classList.add('active');
            } else {
                // Remove
                favorites.splice(index, 1);
                btn.classList.remove('active');
            }

            saveAndRender();
        }

        // Remove specific item from modal
        window.removeFavorite = function(id) {
            favorites = favorites.filter(item => item.id !== id);

            // Update the heart button on the main page if it exists
            // We try to find a button calling toggleFavorite with this ID
            // (Note: This is a simple lookup, assumes ID is unique string in onclick)
            const btns = document.querySelectorAll('.btn-heart');
            btns.forEach(btn => {
                // Check if the onclick attribute contains the ID
                if(btn.getAttribute('onclick').includes(id)) {
                    btn.classList.remove('active');
                }
            });

            saveAndRender();
            // Re-render modal list immediately so user sees it disappear
            renderOrderList();
        }

        function clearFavorites() {
            if(confirm('Are you sure you want to clear your selection?')) {
                favorites = [];
                document.querySelectorAll('.btn-heart').forEach(btn => btn.classList.remove('active'));
                saveAndRender();
                closeOrderModal();
            }
        }

        function saveAndRender() {
            localStorage.setItem(STORAGE_KEY, JSON.stringify(favorites));
            updateFavoritesUI();
            renderOrderList();
        }

        // Update the Floating Button and Heart states on page load
        function updateFavoritesUI() {
            const fab = document.getElementById('fabOrder');
            const count = document.getElementById('fabCount');

            // Update Count
            count.textContent = favorites.length;

            // Show/Hide FAB
            if (favorites.length > 0) {
                fab.classList.add('visible');
            } else {
                fab.classList.remove('visible');
            }

            // Update heart buttons active state (useful on page reload)
            // We loop through all hearts and check if their product ID is in favorites
            const allHearts = document.querySelectorAll('.btn-heart');
            allHearts.forEach(btn => {
                // Extract ID from onclick. 
                // Format: toggleFavorite(this, 'ID_HERE', ...)
                // We regex match the second argument
                const match = btn.getAttribute('onclick').match(/toggleFavorite\(this,\s*'([^']+)'/);
                if (match && match[1]) {
                    const id = match[1];
                    if (favorites.some(f => f.id === id)) {
                        btn.classList.add('active');
                    } else {
                        btn.classList.remove('active');
                    }
                }
            });
        }

        // Render the list inside the modal
        function renderOrderList() {
            const list = document.getElementById('orderList');
            const totalEl = document.getElementById('orderTotal');

            if (favorites.length === 0) {
                list.innerHTML = `
            <div class="text-center text-muted mt-5">
                <i class="bi bi-heart" style="font-size: 2rem; opacity: 0.3;"></i>
                <p class="mt-3">Your list is empty</p>
                <button class="btn btn-sm btn-outline-secondary mt-2" onclick="closeOrderModal()">Browse Menu</button>
            </div>`;
                totalEl.textContent = CURRENCY_SYMBOL + "0.00";
                return;
            }

            let html = '';
            let total = 0;

            favorites.forEach(item => {
                total += item.price;
                html += `
            <div class="order-item">
                <div class="order-item-info">
                    <h4>${item.name}</h4>
                    <div class="order-item-price">${CURRENCY_SYMBOL}${item.price.toFixed(2)}</div>
                </div>
                <button class="btn-remove-item" onclick="removeFavorite('${item.id}')" title="Remove">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        `;
            });

            list.innerHTML = html;
            totalEl.textContent = CURRENCY_SYMBOL + total.toFixed(2);
        }

        // Modal Open/Close
        window.openOrderModal = function() {
            renderOrderList();
            const modal = document.getElementById('orderModal');
            modal.classList.add('open');
            document.body.style.overflow = 'hidden'; // Prevent background scrolling
        }

        window.closeOrderModal = function() {
            const modal = document.getElementById('orderModal');
            modal.classList.remove('open');
            document.body.style.overflow = '';
        }

        // Close on click outside
        document.getElementById('orderModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeOrderModal();
            }
        });

        // Run init on load
        initFavorites();

    </script>
<!-- Floating View Order Button -->
<button class="fab-order" id="fabOrder" onclick="openOrderModal()">
    <div class="fab-count" id="fabCount">0</div>
    <span>My Selection</span>
    <i class="bi bi-arrow-right"></i>
</button>

<!-- Order Sidebar/Modal -->
<div class="order-modal-overlay" id="orderModal">
    <div class="order-modal">
        <div class="order-header">
            <h3 class="m-0" style="font-family: 'Playfair Display', serif;">Your Selection</h3>
            <button type="button" class="btn-close" onclick="closeOrderModal()"></button>
        </div>

        <div class="order-content" id="orderList">
            <!-- Items will be injected here via JS -->
            <div class="text-center text-muted mt-5">
                <i class="bi bi-heart" style="font-size: 2rem;"></i>
                <p class="mt-3">Your list is empty</p>
            </div>
        </div>

        <div class="order-footer">
            <div class="d-flex justify-content-between mb-3">
                <span class="fw-bold">Total Estimate</span>
                <span class="fw-bold text-primary" id="orderTotal">@ViewBag.CurrencySymbol 0.00</span>
            </div>
            <div class="d-grid gap-2">
                <button class="btn btn-outline-danger rounded-pill py-2" onclick="clearFavorites()">
                    Clear List
                </button>
            </div>
        </div>
    </div>
</div>
</body>
</html>
