@using System.Text.Encodings.Web
@using RestaurantMenu.Helpers
@model Branch
@{
    ViewData["Title"] = Model.Name + " - Menu";
    Layout = null;

    // Parse theme colors from JSON
    var primaryColor = "#f6ad55";
    var secondaryColor = "#ed8936";
    var accentColor = "#dd6b20";

    if (!string.IsNullOrEmpty(Model.ThemeColors))
    {
        try
        {
            var colors = System.Text.Json.JsonSerializer.Deserialize<Dictionary<string, string>>(Model.ThemeColors);
            primaryColor = colors.ContainsKey("Primary") ? colors["Primary"] : colors.ContainsKey("primary") ? colors["primary"] : primaryColor;
            secondaryColor = colors.ContainsKey("Secondary") ? colors["Secondary"] : colors.ContainsKey("secondary") ? colors["secondary"] : secondaryColor;
            accentColor = colors.ContainsKey("Accent") ? colors["Accent"] : colors.ContainsKey("accent") ? colors["accent"] : accentColor;
        }
        catch { /* Use default colors */ }
    }

    // Get current language
    var currentLang = ViewBag.CurrentLanguage as string ?? "en";
    var supportedLanguages = (ViewBag.SupportedLanguages as string[]) ?? new[] { "en" };
}

<!DOCTYPE html>
<html lang="@currentLang">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="View the menu for @Model.Name - Browse our selection of delicious items" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="icon" type="image" href="@Model.Logo" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: #f7fafc;
            color: #1a202c;
            line-height: 1.6;
        }

        /* Loading Screen */
        #pageLoader {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: white;
            z-index: 9999;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .loader-spinner {
            width: 50px;
            height: 50px;
            border: 4px solid @primaryColor;
            border-top-color: transparent;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 1rem;
        }

        @@keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Header Section */
        .menu-header {
            position: relative;
            height: 400px;
            background: linear-gradient(135deg, @primaryColor, @secondaryColor);
            color: white;
            overflow: hidden;
        }

        .menu-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: url('@Model.Banner');
            background-size: cover;
            background-position: center;
            opacity: 0.3;
            z-index: 0;
        }

        .header-content {
            position: relative;
            z-index: 1;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 2rem;
        }

        .restaurant-logo {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid white;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            margin-bottom: 1.5rem;
            background: white;
        }

        .restaurant-name {
            font-family: 'Playfair Display', serif;
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            text-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        }

        .restaurant-info {
    display: flex;
    flex-direction: column;        /* stack items */
    align-items: center;           /* center horizontally */
    justify-content: center;
    gap: 0.75rem;
    margin-top: 1rem;
    text-align: center;
}

.info-item {
    display: flex;
    align-items: center;
    justify-content: center;       /* center icon + text */
    gap: 0.5rem;
    font-size: 1.1rem;
}


        /* Language Switcher */
        .language-switcher {
            position: absolute;
            top: 20px;
            right: 20px;
            z-index: 10;
        }

        .language-btn {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.3);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 25px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
        }

        .language-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
        }

        .language-dropdown {
            position: absolute;
            top: 100%;
            right: 0;
            margin-top: 0.5rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            min-width: 150px;
            display: none;
            overflow: hidden;
        }

        .language-dropdown.show {
            display: block;
            animation: fadeInDown 0.3s ease;
        }

        .language-dropdown a {
            display: block;
            padding: 0.75rem 1rem;
            color: #2d3748;
            text-decoration: none;
            transition: all 0.2s;
        }

        .language-dropdown a:hover {
            background: @primaryColor;
            color: white;
        }

        .language-dropdown a.active {
            background: @(primaryColor)20;
            color: @primaryColor;
            font-weight: 600;
        }

        /* Menu Container */
        .menu-container {
            max-width: 1200px;
            margin: -50px auto 4rem;
            padding: 0 2rem;
            position: relative;
            z-index: 2;
        }

        /* Category Navigation Navbar */
        .category-navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 50px;
            padding: 0.5rem 1rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            position: sticky;
            top: 20px;
            z-index: 100;
            margin-bottom: 3rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .nav-scroll-btn {
            flex-shrink: 0;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: none;
            background: linear-gradient(135deg, @primaryColor, @secondaryColor);
            color: white;
            font-size: 1.2rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px @(primaryColor)50;
        }

        .nav-scroll-btn:hover {
            transform: scale(1.1);
            box-shadow: 0 6px 20px @(primaryColor)80;
        }

        .nav-scroll-btn:disabled {
            opacity: 0.3;
            cursor: not-allowed;
            transform: scale(1);
        }

        .nav-container-wrapper {
            flex: 1;
            overflow: hidden;
            position: relative;
        }

        .nav-container {
            display: flex;
            gap: 0.75rem;
            overflow-x: auto;
            scroll-behavior: smooth;
            scrollbar-width: thin;
            scrollbar-color: @primaryColor transparent;
            padding: 0.5rem 0;
        }

        .nav-container::-webkit-scrollbar {
            height: 6px;
        }

        .nav-container::-webkit-scrollbar-track {
            background: rgba(0, 0, 0, 0.05);
            border-radius: 10px;
        }

        .nav-container::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, @primaryColor, @secondaryColor);
            border-radius: 10px;
        }

        .nav-container::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(135deg, @secondaryColor, @accentColor);
        }

        /* Gradient fade indicators */
        .nav-container-wrapper::before,
        .nav-container-wrapper::after {
            content: '';
            position: absolute;
            top: 0;
            bottom: 6px;
            width: 40px;
            pointer-events: none;
            z-index: 1;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .nav-container-wrapper::before {
            left: 0;
            background: linear-gradient(to right, rgba(255, 255, 255, 0.95), transparent);
        }

        .nav-container-wrapper::after {
            right: 0;
            background: linear-gradient(to left, rgba(255, 255, 255, 0.95), transparent);
        }

        .nav-container-wrapper.show-left-fade::before {
            opacity: 1;
        }

        .nav-container-wrapper.show-right-fade::after {
            opacity: 1;
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            background: transparent;
            border: none;
            border-radius: 25px;
            color: #718096;
            text-decoration: none;
            font-weight: 500;
            font-size: 0.95rem;
            white-space: nowrap;
            transition: all 0.3s ease;
            cursor: pointer;
            flex-shrink: 0;
        }

        .nav-link:hover,
        .nav-link.active {
            background: linear-gradient(135deg, @primaryColor, @secondaryColor);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 20px @(primaryColor)66;
        }

        .nav-link i {
            font-size: 1.1rem;
        }

        /* Category Section */
        .category-section {
            background: white;
            border-radius: 20px;
            padding: 3rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            animation: fadeInUp 0.6s ease-out;
            scroll-margin-top: 100px;
        }

        .category-header {
            text-align: center;
            margin-bottom: 3rem;
            padding-bottom: 1.5rem;
            border-bottom: 3px solid @primaryColor;
        }

        .category-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 0.5rem;
        }

        .category-count {
            color: #718096;
            font-size: 1rem;
        }

        /* Product Card */
        .product-card {
            display: flex;
            gap: 2rem;
            padding: 2rem 0;
            border-bottom: 1px solid #e2e8f0;
            transition: all 0.3s ease;
        }

        .product-card:last-child {
            border-bottom: none;
        }

        .product-card:hover {
            transform: translateX(10px);
            padding-left: 1rem;
            background: #f7fafc;
            border-radius: 15px;
            margin: 0 -1rem;
            padding-right: 3rem;
        }

        .product-card.no-image {
            gap: 0;              /* removes the empty image spacing */
        }

        .product-image-wrapper {
            flex-shrink: 0;
            width: 150px;
            height: 150px;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        }

        .product-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .product-card:hover .product-image {
            transform: scale(1.1);
        }

        .product-placeholder {
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, @(primaryColor)15, @(secondaryColor)15);
            border: 2px dashed @(primaryColor)40;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: @primaryColor;
            gap: 0.5rem;
        }

        .product-placeholder i {
            font-size: 3rem;
            opacity: 0.5;
            transition: all 0.3s ease;
        }

        .product-card:hover .product-placeholder {
            background: linear-gradient(135deg, @(primaryColor)25, @(secondaryColor)25);
            border-color: @(primaryColor)60;
        }

        .product-card:hover .product-placeholder i {
            opacity: 0.8;
            transform: scale(1.1);
        }

        .product-details {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .product-header {
            display: flex;
            justify-content: space-between;
            align-items: start;
            margin-bottom: 0.75rem;
        }

        .product-name {
            font-family: 'Playfair Display', serif;
            font-size: 1.75rem;
            font-weight: 600;
            color: #2d3748;
            margin-bottom: 0.5rem;
        }

        .product-price {
            font-size: 1.75rem;
            font-weight: 700;
            color: @primaryColor;
            white-space: nowrap;
            margin-left: 1rem;
        }

        .product-description {
            color: #718096;
            margin-bottom: 0.75rem;
            line-height: 1.6;
        }

        .product-nutrition {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #e53e3e;
            font-size: 0.9rem;
            font-weight: 500;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: #718096;
        }

        .empty-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        /* Footer */
        .menu-footer {
            text-align: center;
            padding: 3rem 2rem;
            color: #718096;
            background: white;
            border-top: 1px solid #e2e8f0;
        }

        /* Animations */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Print Styles */
        @@media print {
            .language-switcher,
            .category-navbar,
            .nav-scroll-btn {
                display: none !important;
            }

            .menu-header {
                height: auto;
                padding: 2rem;
                page-break-after: avoid;
            }

            .category-section {
                page-break-inside: avoid;
                box-shadow: none;
                border: 1px solid #e2e8f0;
                margin-bottom: 1rem;
            }

            .product-card {
                page-break-inside: avoid;
            }

            .product-card:hover {
                transform: none;
                background: none;
            }

            body {
                background: white;
            }

            .menu-container {
                margin-top: 0;
            }
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .restaurant-name {
                font-size: 2.5rem;
            }

            .menu-container {
                padding: 0 1rem;
                margin-top: -30px;
            }

            .language-switcher {
                top: 10px;
                right: 10px;
            }

            .language-btn {
                padding: 0.4rem 0.8rem;
                font-size: 0.9rem;
            }

            .category-navbar {
                padding: 0.25rem 0.5rem;
                top: 10px;
            }

            .nav-scroll-btn {
                width: 35px;
                height: 35px;
                font-size: 1rem;
            }

            .nav-link {
                padding: 0.5rem 1rem;
                font-size: 0.9rem;
            }

            .nav-container-wrapper::before,
            .nav-container-wrapper::after {
                width: 30px;
            }

            .category-section {
                padding: 2rem 1.5rem;
            }

            .category-title {
                font-size: 2rem;
            }

            .product-card {
                flex-direction: column;
                gap: 1rem;
                padding: 1.5rem 0;
            }

            .product-card:hover {
                transform: none;
                padding-left: 0;
                margin: 0;
                padding-right: 0;
            }

            .product-image-wrapper {
                width: 100%;
                height: 200px;
            }

            .product-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .product-price {
                margin-left: 0;
                margin-top: 0.5rem;
            }

            .product-name {
                font-size: 1.5rem;
            }

            .restaurant-info {
                flex-direction: column;
                gap: 0.75rem;
            }
        }

        @@media (max-width: 480px) {
            .restaurant-name {
                font-size: 2rem;
            }

            .menu-header {
                height: 350px;
            }

            .restaurant-logo {
                width: 100px;
                height: 100px;
            }

            .category-title {
                font-size: 1.75rem;
            }

            .product-name {
                font-size: 1.25rem;
            }

            .product-price {
                font-size: 1.5rem;
            }

            .info-item {
                font-size: 0.95rem;
            }
        }

        .btn-heart {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: 1px solid #e2e8f0;
            background: white;
            color: #cbd5e0; /* Gray when inactive */
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s ease;
            font-size: 1.2rem;
            margin-left: 1rem;
            flex-shrink: 0;
        }

        .btn-heart:hover {
            background: #f7fafc;
            color: @primaryColor;
            transform: scale(1.1);
        }

        .btn-heart.active {
            background: @(primaryColor)15; /* Light tint of primary */
            border-color: @primaryColor;
            color: @primaryColor;
        }

        .btn-heart.active i::before {
            content: "\F415"; /* Bootstrap Icons Heart Fill */
        }

        /* Floating Action Button (View Order) */
        .fab-order {
            position: fixed;
            bottom: 30px;
            right: 30px;
            background: @primaryColor;
            color: white;
            padding: 1rem 2rem;
            border-radius: 50px;
            box-shadow: 0 10px 25px @(primaryColor)66;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            cursor: pointer;
            z-index: 900;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            transform: translateY(100px); /* Hidden by default */
            border: none;
        }

        .fab-order.visible {
            transform: translateY(0);
        }

        .fab-order:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px @(primaryColor)80;
        }

        .fab-count {
            background: white;
            color: @primaryColor;
            width: 24px;
            height: 24px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.85rem;
            font-weight: bold;
        }

        /* Order Modal/Offcanvas */
        .order-modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.5);
            z-index: 1000;
            display: none;
            opacity: 0;
            transition: opacity 0.3s ease;
            backdrop-filter: blur(4px);
        }

        .order-modal-overlay.open {
            display: flex;
            opacity: 1;
        }

        .order-modal {
            background: white;
            width: 100%;
            max-width: 500px;
            margin-left: auto;
            height: 100%;
            display: flex;
            flex-direction: column;
            transform: translateX(100%);
            transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .order-modal-overlay.open .order-modal {
            transform: translateX(0);
        }

        .order-header {
            padding: 1.5rem;
            border-bottom: 1px solid #e2e8f0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #f8f9fa;
        }

        .order-content {
            flex: 1;
            overflow-y: auto;
            padding: 1.5rem;
        }

        .order-footer {
            padding: 1.5rem;
            border-top: 1px solid #e2e8f0;
            background: white;
        }

        .order-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 0;
            border-bottom: 1px dashed #e2e8f0;
        }

        .order-item-info h4 {
            font-size: 1rem;
            margin-bottom: 0.25rem;
            font-family: 'Playfair Display', serif;
        }

        .order-item-price {
            color: @primaryColor;
            font-weight: 600;
        }

        .btn-remove-item {
            color: #e53e3e;
            background: none;
            border: none;
            cursor: pointer;
            padding: 0.5rem;
            opacity: 0.6;
            transition: opacity 0.2s;
        }

        .btn-remove-item:hover {
            opacity: 1;
        }

        /* Mobile Responsive adjustment */
        @@media (max-width: 768px) {
            .product-header {
                align-items: center; /* Align items center for mobile */
            }

            .fab-order {
                bottom: 20px;
                right: 20px;
                padding: 0.8rem 1.5rem;
            }
        }
    </style>
</head>
